<div class="planet_content">
Log de todas as batalhas do esquadr√£o:
  <% @rounds.sort_by{|a| a.number}.reverse.each do |round| %>
    <h2> Round: <%= round.number %> </h2>

    <% round.results.group_by(&:planet).each do |planet, fleet| %>
      <% if fleet.any? { |unit| unit.squad == @squad } %>
      <h3><%= planet.name %></h3>
      <% fleet.each do |unit| %>
        <span style=color:#<%= unit.squad.color %>>
        <%= unit.quantity %>
        <%= unit.generic_unit.name %>
        <% if unit.generic_unit.is_a? Facility %>
          (
          <%= unit.producing_unit.name if unit.producing_unit %>
          /
          <%= unit.producing_unit2.name if unit.producing_unit2 %>
          )
        <% end %>
        <span style=color:#40E0D0> <%= unit.show_results %> </span>
        <br>
      <% end %>
      <% end %>
    <% end %>


  <% end %>
 
</div>
