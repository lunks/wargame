<% if fleet.moving? %>
  <info class="tooltip">
    <tip>FÁBRICA / CENTRO DE TREINAMENTO<br><%= fleet.generic_unit.name %> em missão de transporte.<br>Destruída se todo o comboio for destruído<br>Só pode ser remontada em planetas sem unidades inimigas.<br>- ATENÇÃO: O movimento zera a produção e o level!</tip>
    <%= fleet.show %>
  </info>
<% else %>
<info class="tooltip">
    <tip>FÁBRICA / CENTRO DE TREINAMENTO<br>Nível: <%= fleet.level %><br>Produtividade: <%= fleet.default_capacity %> / <%= fleet.secondary_capacity %>  <%= ' (sabotada/bloqueada em 50%) ' if fleet.sabotaged? %><br>- Construção de unidades e treinamento de guerreiros e oficiais<br>- Movimenta-se em <%= fleet.generic_unit.description %><br>- ATENÇÃO: O movimento zera a produção e o level!</tip>
    <%= fleet.show %>
  </info>
  <% if @round.move && fleet.squad == @squad && !fleet.squad.ready? %>
   <a href = "" onclick="window.open('/facility_fleets/<%= fleet.id %>/edit', 'Facility <%= fleet.id %>', 'toolbar=no, location=no, scrollbars=yes, resizable=no, width=390, height=520')">+</a>
  <% end %>


<% end %>




