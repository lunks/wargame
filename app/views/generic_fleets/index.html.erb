</table>
  <% unless @squad.ready? %>
    <%= link_to "Esquadrão pronto", ready_path %> Clique apenas uma vez!
  <% end %>
  <% @all_squads.each do |squad| %>
    <span style=text-decoration:blink;color:#<%= squad.color %>>
      <%= squad.name + " pronto  " if squad.ready? %>
    </span>
  <% end %>
</div>

<div class="planet_content">
  <% @planets.each do |planet| %>
    <h2> <%= planet.name %> <%= ' (wormhole) ' if planet.wormhole? %><%= ' (tradeport)' if planet.tradeport? %></h2>
    <p>
    <%= "Ganhos previstos: $#{planet.credits_per_turn}" if planet.credits_per_turn.present? && planet.credits_per_turn > 0 && (planet.squad == @squad || planet.ground_squad == @squad) %>
    <p>
    <% planet.generic_fleets.sort_by{|a| [a.squad.name, a.generic_unit.type, a.quantity, a.generic_unit.name]}.each do |fleet| %>
      <span style=color:#<%= fleet.squad.color %>>
      <% case fleet.generic_unit.type %>
      <% when 'Facility' %>
        <%= render :partial => 'facilities', :locals => { :fleet => fleet } %>
      <% when 'CapitalShip' %>
        <%= render :partial => 'capital_ships', :locals => { :fleet => fleet } %>
      <% when 'Warrior' %>
        <%= render :partial => 'warriors', :locals => { :fleet => fleet } %>
      <% when 'Trooper' %>
        <%= render :partial => 'troopers', :locals => { :fleet => fleet } %>
      <% else %>
        <%= render :partial => 'fleets', :locals => { :fleet => fleet } %>
      <% end %>
      <span style=color:#40E0D0><%= fleet.show_results %></span>
      <span style=color:#40E0D0><%= "--> #{fleet.destination.name} " if fleet.moving? && fleet.squad == @squad %></span>
      </span>
      <br>
    <% end %>
    <p>
    <%= link_to ' mover frotas ', move_planet_path(planet, :KeepThis => "true", :TB_iframe => "true", :height => "500", :width => "400"), :class => "thickbox" if @round.move && !@squad.ready? %></span>
    <%= link_to ' construir fábrica ', new_planet_facility_fleet_path(planet, :KeepThis => "true", :TB_iframe => "true", :height => "200", :width => "400"), :class => "thickbox" if @round.move && planet.able_to_construct?(@squad) && !@squad.ready? %>
    <%= link_to ' tradeport ', tradeport_path(planet, :KeepThis => "true", :TB_iframe => "true", :height => "270", :width => "400"), :class => "thickbox" if planet.tradeport? && !@squad.ready? %></span>
    <% if @round.attack && planet.under_attack? %>
      <%= "Defensor ->" %>
      <% if planet.squad.present? %>
      <span style=color:#<%= planet.squad.color %>><%= planet.squad.name %></span>
        <% elsif planet.ground_squad.present? %> 
        <span style=color:#<%= planet.ground_squad.color %>><%= planet.ground_squad.name %></span>
       <% else %>
        não há
      <% end %>
      <p>
    <% end %>
    <%= link_to ' postar resultados ', planet_results_path(planet, :KeepThis => "true", :TB_iframe => "true", :height => "500", :width => "420"), :class => "thickbox" if @round.attack && planet.under_attack? && !@squad.ready?%>
  <% end %>
<p>
