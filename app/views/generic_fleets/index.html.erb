<div class="squad_info">
<span style=color:#<%= @squad.color %>;font-weight:bold;font-size:24px><%= @squad.name %></span><br>
<span style=font-weight:bold;font-size:18px> Round: <%= @round.number %> <%= link_to "click when ready ", ready_path %></span><br>
<span style=font-weight:bold;font-size:13px;color:yellow> Credits: $<%= @squad.credits %> <%= link_to "transfer credits ", :transfer %> </span><br>
<span style=font-weight:bold;font-size:13px;color:#00FF00> Income: $<%= @income %> </span><br>
<span style=font-weight:bold;font-size:13px;color:#FF0000> Wasted: $ -<%= @flee_tax.to_i %></span><br>
<span style=text-decoration:blink;><%= " Strategy is ready! Waiting other players " if @squad.ready? %></span>
</div>

<div class="planet_content">
  <% @planets.each do |planet| %>
    <h2> <%= planet.name %></h2>
    <p>
    <%= "Planet Income: $#{planet.credits}" if planet.credits_per_turn.present? && planet.credits_per_turn > 0 && planet.squad == @squad && planet.ground_squad == @squad %>
    <p>
    <% planet.generic_fleets.each do |fleet| %>
      <span style=color:#<%= fleet.squad.color %>>
      <% if fleet.class == FacilityFleet %>
         <%= render :partial => 'facilities', :locals => { :fleet => fleet } %>
       <% else %>
         <%= render :partial => 'fleets', :locals => { :fleet => fleet } %>
      <% end %>
      </span>
      <br>
    <% end %>
    <p>
    <%= link_to 'move fleets ', move_planet_path(planet) if @round.move %>
    <%= link_to ' build facility ', new_planet_facility_fleet_path(planet) if @round.move && planet.squad == @squad %>
    <%= link_to 'post results ', planet_results_path(planet) if @round.attack %> 
  <% end %>
</div>
