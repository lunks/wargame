<div class="squad_info">
<span style=color:#<%= @squad.color %>;font-weight:bold;font-size:24px><%= @squad.name %></span><br>
<span style=font-weight:bold;font-size:18px> Round: <%= @round.number %> <%= link_to " clique quando pronto ", ready_path %></span><br>
<span style=font-weight:bold;font-size:13px;color:yellow> Créditos: $<%= @squad.credits %> <%= link_to "transferir créditos ", :transfer %> </span><br>
<span style=font-weight:bold;font-size:13px;color:#00FF00> Ganhos: $<%= @income %> </span><br>
<span style=font-weight:bold;font-size:13px;color:#FF0000> Perdas: $ -<%= @flee_tax.to_i %></span><br>
  <% @all_squads.each do |squad| %>
    <span style=text-decoration:blink;color:#<%= squad.color %>>
    <%= squad.name + " pronto  " if squad.ready? %>
  <% end %>
</span>
</div>

<div class="planet_content">
  <% @planets.each do |planet| %>
    <h2> <%= planet.name %> <%= ' (wormhole)' if planet.wormhole? %></h2>
    <p>
    <%= "Ganhos previstos: $#{planet.credits}" if planet.credits_per_turn.present? && planet.credits_per_turn > 0 && planet.squad == @squad && planet.ground_squad == @squad %>
    <p>
    <% planet.generic_fleets.each do |fleet| %>
      <span style=color:#<%= fleet.squad.color %>>
      <% if fleet.generic_unit.type == 'Facility' %>
         <%= render :partial => 'facilities', :locals => { :fleet => fleet } %>
       <% elsif fleet.generic_unit.type == 'CapitalShip' %>
         <%= render :partial => 'capital_ships', :locals => { :fleet => fleet } %>
       <% else %>
         <%= render :partial => 'fleets', :locals => { :fleet => fleet } %>
      <% end %>
      </span>
      <br>
    <% end %>
    <p>
    <%= link_to ' mover frotas ', move_planet_path(planet) if @round.move %>
    <%= link_to ' construir fábrica ', new_planet_facility_fleet_path(planet) if @round.move && planet.squad == @squad %>
    <%= link_to ' postar resultados ', planet_results_path(planet) if @round.attack and planet.under_attack? %> 
  <% end %>
</div>

