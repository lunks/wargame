<% if fleet.moving? %>
  <info class="tooltip">
    <%= fleet.name %>
    <tip>FÁBRICA / CENTRO DE TREINAMENTO<br><%= fleet.generic_unit.name %> em missão de transporte.<br>Destruída se todo o comboio for destruído<br>Só pode ser remontada em planetas sem unidades inimigas</tip>
  </info>
<% else %>
  <info class="tooltip">
    <%= fleet.name %>
    <tip>FÁBRICA / CENTRO DE TREINAMENTO<br>Nível: <%= fleet.level %><br>Produtividade: <%= fleet.default_capacity %> / <%= fleet.secondary_capacity %>  <%= ' (sabotada em 50%) ' if fleet.sabotaged? %><br>- Construção de unidades e treinamento de guerreiros e oficiais<br>- Se movimentada transforma-se em <%= fleet.generic_unit.description %><br>- O movimento reseta toda a produção e aprimoramentos</tip>
  </info>
  <%= ' *50%*' if fleet.sabotaged? %>
   ( 
     <% if fleet.producing_unit.present? %>
         <%= fleet.producing_unit_display %>
      <% else %>
        <%= 'inativa' %>
      <% end %>
      <% if fleet.producing_unit2.present? %>
          / 
         <%= fleet.producing_unit2.name %>
      <% else %>
         /
        <%= 'inativa' %>
      <% end %>
  )
  <%= link_to "+", edit_facility_fleet_path(fleet, :KeepThis => "true", :TB_iframe => "true", :height => "530", :width => "360"), :class => "thickbox" if @round.move && fleet.squad == @squad && !fleet.squad.ready? %>

<% end %>




